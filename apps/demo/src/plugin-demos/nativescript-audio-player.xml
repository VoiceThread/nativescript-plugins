<Page xmlns="http://schemas.nativescript.org/tns.xsd"
  navigatingTo="navigatingTo">
  <Page.actionBar>
    <ActionBar title="Audio Player"
      icon=""/>
  </Page.actionBar>
  <StackLayout class="p-20">
    <ScrollView class="h-full">
      <StackLayout>
        <Button text="Play local M4A audiofile "
          tap="{{ playLocalM4aAudio }}"/>
        <Button text="Play local MP3 audiofile "
          tap="{{ playLocalMp3Audio }}"/>
        <Button text="Play local WAV audiofile "
          tap="{{ playLocalWavAudio }}"/>
        <Button text="(iOS-only) Play local CAF audiofile "
          tap="{{ playLocalCafAudio }}"/>
        <Button text="Play remote MP3 audiofile "
          tap="{{ playRemoteAudio }}"/>
        <Button text="Stop playing"
          tap="{{ stopPlayback }}"
          id="stopPlayBtn"/>
        <Label text="Currently playing audio file info:"
          id="outputLabel"
          visibility="collapsed"/>
        <StackLayout id="outputStack"
          visibility="collapsed"/>
      </StackLayout>
    </ScrollView>
  </StackLayout>
</Page>